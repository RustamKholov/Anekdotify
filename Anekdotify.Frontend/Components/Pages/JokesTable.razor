@rendermode RenderMode.InteractiveServer
@page "/saved"
<PageTitle>Saved - Anekdotify</PageTitle>
@if (_isLoading)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (_errorMessage != null)
{
    <p class="text-danger">Error: @_errorMessage</p>
    <button class="btn btn-primary" @onclick="LoadJokes">Try Again</button>
}
else if (_jokes.Any())
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 w-100" style="height: 95%">
        @foreach (var joke in _jokes)
        {
            <div class="col">
                <JokeCard Joke="@joke" IsFlipped="@true" />
                <div class="joke-card-comments">
                    <CommentsModal JokeId="@joke.JokeId" />
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 w-100">

        <p class="text-muted">Here you'll see your saved jokes. (Coming soon)</p>
    </div>
}
