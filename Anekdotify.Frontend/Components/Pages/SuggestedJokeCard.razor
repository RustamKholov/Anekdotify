<div class="border rounded-3 p-3 mb-3 bg-light" style="font-size:0.95em;">
    <div class="d-flex justify-content-between align-items-center mb-1">
        <span class="badge bg-secondary">@Joke.ClassificationName</span>
        <span class="@GetStatusColor(Joke.Status) small">@Joke.Status</span>
    </div>
    <div class="text-dark mb-1" style="font-weight:500;">@Joke.Text</div>
    <div class="text-muted small">ID: @Joke.JokeId</div>
</div>

@code {
    [Parameter]
    public SuggestedJokeDTO Joke { get; set; } = default!;

    private string GetStatusColor(string status) => status switch
    {
        "Pending" => "text-warning",
        "Approved" => "text-success",
        "Rejected" => "text-danger",
        _ => "text-secondary"
    };
}