@using Anekdotify.Frontend.Services
@using Microsoft.IdentityModel.JsonWebTokens
@inject NavigationManager NavigationManager
@inject INavigationHistoryService NavigationHistory



<nav class="navbar navbar-light bg-white shadow-sm px-2">
    <div class="container-fluid">
        <a class="navbar-brand text-dark fw-bold fs-4" href="/">AnekDOTify</a>
        @if (_showBackButton)
        {
            <button class="btn btn-outline-light me-2 text-dark" @onclick="GoBack" title="Go Back">
                <i class="bi bi-arrow-left"></i> Back
            </button>
        }
        <div class="navbar-nav ms-auto d-flex align-items-center gap-2 flex-row">
            <AuthorizeView>
                <Authorized>
                    <span class="navbar-text text-dark me-2">
                        Welcome, @context.User.FindFirst(JwtRegisteredClaimNames.GivenName)?.Value!
                    </span>
                    <a class="btn btn-outline-dark btn-sm" href="/hub">
                        <i class="bi bi-person-circle me-1"></i> Profile
                    </a>
                    <a class="btn btn-outline-secondary btn-sm" href="javascript:void(0)" @onclick="Logout">
                        <i class="bi bi-box-arrow-right me-1"></i> Logout
                    </a>
                </Authorized>
                <NotAuthorized>
                    <a class="btn btn-secondary btn-sm" href="/register">
                        <i class="bi bi-person-plus me-1"></i> Register
                    </a>
                    <a class="btn btn-outline-dark btn-sm" href="/login">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</nav>

@code {

    private bool _showBackButton = false;

    private void Logout()
    {
        NavigationManager.NavigateTo("/logout", forceLoad: true);
    }

    protected override void OnInitialized()
    {
        NavigationHistory.OnNavigationChanged += OnNavigationChanged;
        _showBackButton = NavigationHistory.CanGoBack;
    }

    private void OnNavigationChanged(bool canGoBack)
    {
        _showBackButton = canGoBack;
        InvokeAsync(StateHasChanged);
    }

    private void GoBack()
    {
        NavigationHistory.GoBack();
    }

    public void Dispose()
    {
        NavigationHistory.OnNavigationChanged -= OnNavigationChanged;
    }

}